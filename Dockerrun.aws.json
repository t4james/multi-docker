{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image": "t4james/multi-client",
            "hostname": "client",
            "essential": false,
            "memmory": 128
        },

        {
            "name":"server",
            "image": "t4james/multi-server",
            "hostname": "api",
            "essential": false, 
            "memmory": 128
        },

        {
            "name":"worker",
            "image": "t4james/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memmory": 128
        },

        {
            "name":"nginx",
            "image": "t4james/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memmory": 128

        }
    ]
}